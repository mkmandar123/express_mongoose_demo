{
  "name": "nodejs-express-mongoose-typescript-boilerplate",
  "version": "0.0.0",
  "description": "The nodejs boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "npm run nodemon",
    "start": "export APP_ENV=production; node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config build/index.js",
    "build": "tsc",
    "nodemon": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec 'ts-node --files' src/index.ts",
    "test": "export APP_ENV=test; jest",
    "test:watch": "export APP_ENV=test; jest --watchAll",
    "coverage": "export APP_ENV=test; jest --coverage",
    "coverage:coveralls": "export APP_ENV=test; jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "test:e2e": "export APP_ENV=test; jest -c jest.integration.config.js",
    "test:e2e:watch": "export APP_ENV=test; jest -c jest.integration.config.js --watchAll",
    "test:e2e:coverage": "export APP_ENV=test; jest -c jest.integration.config.js --coverage",
    "migrate-mongo": "set -o allexport; source .env set; +o allexport; migrate-mongo",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongoose",
    "typescript",
    "boilerplate"
  ],
  "author": "MrBrown6210",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/faker": "^6.6.8",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose-unique-validator": "^1.0.9",
    "@types/morgan": "^1.9.9",
    "@types/passport-anonymous": "^1.0.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "coveralls": "^3.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "faker": "^6.6.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "mongoose-private": "^0.1.3",
    "mongoose-unique-validator": "^5.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "passport": "^0.7.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0",
    "winston": "^3.13.0",
    "xss-clean": "^0.1.1"
  }
}
